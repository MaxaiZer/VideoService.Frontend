{
  "compilerOptions": {
    "target": "es2016",                                      
    "moduleResolution": "node",           
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,          
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.html", "src/**/*.css"],
  "exclude": ["node_modules"]
}
